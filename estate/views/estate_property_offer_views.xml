<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_estate_properties_offer_tree" model="ir.ui.view">
        <field name="name">estate.properties.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Property Offers" editable="bottom" create="0" edit="0"
                  decoration-danger="state == 'refused'" decoration-success="state == 'accepted'">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_accept" type="object" icon="fa-check"
                        invisible="state != False" title="Accept"/>
                <button name="action_refuse" type="object" icon="fa-times"
                        invisible="state != False" title="Refuse"/>
                <field name="state" column_invisible="True"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property offers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No records are available to show.
            </p>
        </field>
    </record>
</odoo>